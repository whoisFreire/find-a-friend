generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetSize {
  MINI
  SMALL
  MEDIUM
  LARGE
}

model Pet {
  id         String    @id @default(uuid())
  name       String?
  age        Int?
  color      String?
  size       PetSize
  species    String
  org_id     String
  image_url  String?
  created_at DateTime  @default(now())
  adopted_at DateTime?

  org Org @relation(fields: [org_id], references: [id])
}

model City {
  id    String @id @default(uuid())
  name  String
  state String
  Org   Org[]
}

model Org {
  id         String   @id @default(uuid())
  address    String
  phone      String
  city_id    String
  created_at DateTime @default(now())

  Pet  Pet[]
  City City  @relation(fields: [city_id], references: [id])
}
